//- Generic Page Layout (for pages like About, Contact, etc.)
//- Similar to post layout but without share buttons
.post-wrapper
  //- Table of Contents Sidebar
  .toc-sidebar
    .toc-container
      .toc-title 目录
      .toc-content#table-of-contents
        // Table of contents will be generated by JavaScript

  //- Main Page Content
  article.post-container
    .post-header
      if page.cover
        .post-cover
          - var getCoverPath = function(cover, path) {
          -   if (cover.startsWith('/')) return cover;
          -   return path.replace(/\\/g, '/').split('/').slice(0, -1).join('/') + '/' + cover;
          - }
          - var coverPath = getCoverPath(page.cover, page.path)
          img(src=url_for(coverPath), alt=page.title)

      .post-meta
        .post-date
          time(datetime=date_xml(page.date))= date(page.date, "MMMM DD, YYYY")

      h1.post-title= page.title

    .post-content
      != page.content
