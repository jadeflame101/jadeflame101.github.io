// 添加交互式卡片样式
style.
  .interests-showcase {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
    margin: 40px 0;
    position: relative;
  }

  .interest-card {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    cursor: pointer;
    z-index: 1;
  }

  .interest-card:hover {
    transform: translateY(-10px) scale(1.03);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    z-index: 10;
  }

  // 不同卡片的大小
  .interest-life {
    width: 320px;
    height: 380px;
  }

  .interest-art {
    width: 280px;
    height: 340px;
  }

  .interest-sport {
    width: 300px;
    height: 360px;
  }

  .interest-create {
    width: 340px;
    height: 400px;
  }

  // 卡片背景
  .card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: all 0.5s ease;
    z-index: -1;
  }

  .interest-life .card-bg {
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  }

  .interest-art .card-bg {
    background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
  }

  .interest-sport .card-bg {
    background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
  }

  .interest-create .card-bg {
    background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%);
  }

  // 卡片内容
  .card-content {
    padding: 30px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #fff;
    position: relative;
    z-index: 2;
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
    transition: all 0.3s ease;
  }

  .interest-card:hover .card-content {
    background: rgba(0, 0, 0, 0.4);
  }

  .card-content h3 {
    font-size: 2.5rem;
    margin: 0 0 15px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .card-description {
    margin-bottom: 20px;
  }

  .card-description p {
    font-size: 1.1rem;
    margin: 0;
    line-height: 1.5;
  }

  .card-icon {
    font-size: 2rem;
    margin-top: 20px;
    align-self: flex-end;
  }

  .card-hover-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px 30px;
    background: rgba(0, 0, 0, 0.7);
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .interest-card:hover .card-hover-content {
    transform: translateY(0);
  }

  .card-hover-content p {
    margin: 0;
    font-size: 0.95rem;
  }

  // 其他部分样式
  .about-details {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .about-section {
    margin-bottom: 30px;
  }

  .about-section h2 {
    color: #333;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #f0f0f0;
  }

  .profile-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
  }

  .profile-item {
    background: #f9f9f9;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  }

  .profile-label {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 5px;
  }

  .profile-value {
    font-size: 1.1rem;
    font-weight: bold;
    color: #333;
  }

  .bio-content {
    background: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    line-height: 1.6;
  }

  .contact-info {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
  }

  .contact-item {
    display: flex;
    align-items: center;
    background: #f9f9f9;
    padding: 15px;
    border-radius: 8px;
    text-decoration: none;
    color: #333;
    transition: all 0.3s ease;
    flex: 1;
    min-width: 200px;
  }

  .contact-item:hover {
    background: #f0f0f0;
    transform: translateY(-3px);
  }

  .contact-item i {
    font-size: 1.5rem;
    margin-right: 15px;
    color: #555;
  }

  .contact-detail {
    display: flex;
    flex-direction: column;
  }

  .contact-label {
    font-size: 0.9rem;
    color: #666;
  }

  .contact-value {
    font-size: 1rem;
    font-weight: bold;
    color: #333;
  }

  .about-quote {
    max-width: 800px;
    margin: 40px auto 20px;
    text-align: center;
  }

  .about-quote blockquote {
    font-size: 1.2rem;
    font-style: italic;
    color: #666;
    margin: 0;
    padding: 0 20px;
    position: relative;
  }

  .about-quote blockquote:before {
    content: '"';
    font-size: 3rem;
    color: #ddd;
    position: absolute;
    left: -10px;
    top: -10px;
  }

  .about-quote blockquote:after {
    content: '"';
    font-size: 3rem;
    color: #ddd;
    position: absolute;
    right: -10px;
    bottom: -30px;
  }

  // 响应式设计
  @media (max-width: 768px) {
    .interests-showcase {
      flex-direction: column;
      align-items: center;
    }

    .interest-card {
      width: 100% !important;
      max-width: 350px;
      height: 300px !important;
    }

    .profile-info {
      grid-template-columns: 1fr;
    }

    .contact-info {
      flex-direction: column;
    }
  }
