//- About Page Layout
//- 交互式卡片设计，体现设计感和张力

main.about-page
  .about-container
    .about-header
      .about-avatar
        img(src=url_for(theme.author_card.avatar), alt="个人头像")
      h1.about-name= theme.author_card.name
      p.about-bio= theme.author_card.bio

    .interests-showcase
      if site.data.about && site.data.about.cards
        each card in site.data.about.cards
          - var cardClass = 'interest-card interest-' + card.title.toLowerCase()
          - if (card.layout === 'landscape') cardClass += ' card-landscape'
          - if (card.layout === 'portrait') cardClass += ' card-portrait'
          - if (card.size === 'large') cardClass += ' card-large'
          - if (card.size === 'medium') cardClass += ' card-medium'
          - if (card.size === 'small') cardClass += ' card-small'
          
          div(class=cardClass data-interest=card.title.toLowerCase())
            .card-bg(style="background: " + card.background)
            .card-content
              h3.card-title= card.title
              .card-description
                p= card.description
              .card-icon
                i(class=card.icon)
              .card-hover-content
                p= card.details

    .about-details
      .about-section
        h2 关于我
        .profile-info
          .profile-item
            .profile-label 称呼
            .profile-value 然
          .profile-item
            .profile-label 家乡
            .profile-value 广东广州
          .profile-item
            .profile-label 现居地
            .profile-value 山西太原
          .profile-item
            .profile-label 教育
            .profile-value 中北大学 · 大四在读

      .about-section
        h2 兴趣点
        .bio-content
          p 摄影，羽毛球，油画，设计，代码，哲学，生活，艺术，运动，创造，游戏，阅读，骑行，爬山，长跑

      .about-section
        h2 联系方式
        .contact-info
          a.contact-item(href="mailto:3316703158@qq.com")
            i.fas.fa-envelope
            .contact-detail
              .contact-label 邮箱
              .contact-value 3316703158@qq.com
          a.contact-item(href="https://github.com/forever218")
